# abort script on any command that exits with a non zero value
set -e -x -u

# $BOSH_INSTALL_TARGET - /var/vcap/packages/$PACKAGE_NAME
# $BOSH_COMPILE_TARGET - /var/vcap/data/compile/$PACKAGE_NAME
# $PWD - $BOSH_COMPILE_TARGET
export PACKAGE_NAME=$(basename $BOSH_COMPILE_TARGET)
echo "DEBUG: PACKAGE_NAME=$PACKAGE_NAME" ;

mkdir -p $BOSH_INSTALL_TARGET

for DEB in $(ls -1 $PACKAGE_NAME/*.deb); do
  echo "Installing $(basename $DEB)"
  dpkg -x $DEB $BOSH_INSTALL_TARGET
done

cp -a $PACKAGE_NAME/profile.sh $BOSH_INSTALL_TARGET/
