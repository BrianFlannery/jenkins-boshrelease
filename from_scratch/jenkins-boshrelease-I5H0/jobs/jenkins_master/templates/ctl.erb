#!/bin/bash

jre=openjre_8 ;
j=jenkins_master

RUN_DIR=/var/vcap/sys/run/$j
LOG_DIR=/var/vcap/sys/log/$j
PIDFILE=${RUN_DIR}/pid
log="$LOG_DIR/jenkins.stdout.log" ;
elog="$LOG_DIR/jenkins.stderr.log" ;


die() { echo $1 ; exit 1 ;
}
execute() {
  "$@" || die "ERROR: execute: $@: $?" ;
}
vexecute() {
  echo "$@" ;
  "$@" || die "ERROR: vexecute: $@: $?" ;
  echo ;
}

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    for l in "$log" "$elog" ; do
      ( echo -e "\n\n" ; date ; echo ) &>> $l ;
    done ;
    
    vexecute pwd &>> $elog ;
    vexecute cat $0 &>> $elog ;
    
    cd /var/vcap/packages/jenkins_master_war
    
    for d in /var/vcap/ /var/vcap/packages/ /var/vcap/packages/openjre_8 ; do
      vexecute ls -lart "$d" &>> $elog ;
    done ;

    export JAVA_HOME=/var/vcap/packages/$jre
    export PATH=$JAVA_HOME/bin:$PATH
    [[ $PORT ]] || export PORT=<%= p('jenkins_master.httpPort') %>

    exec chpst -v $JAVA_HOME/bin/java \
      -jar jenkins.war \
      --httpPort=$PORT \
      >>  $log \
      2>> $elog

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac

